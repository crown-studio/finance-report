{
    "env": {
        "browser": true,
        "es2021": false
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
        // "eslint:recommended",
        // "standard-with-typescript",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint"
    ],
    "rules": {
        "react-hooks/exhaustive-deps": "warn"
    }
}